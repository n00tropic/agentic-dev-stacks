{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://n00tropic.dev/agent-ecosystems/schemas/stack.schema.json",
  "title": "Workspace Stack",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "devcontainerPath",
    "profilePath",
    "defaultAgents",
    "defaultToolsets",
    "tags"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-_.]+$"
    },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "devcontainerPath": { "type": "string" },
    "profilePath": { "type": "string" },
    "defaultAgents": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "defaultToolsets": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
