{
  "$schema": "../schemas/bundle.schema.json",
  "id": "fullstack-js-ts-linux",
  "version": "0.1.0",
  "stackId": "fullstack-js-ts",
  "os": "linux",
  "artifacts": [
    "vscode/.devcontainer/devcontainer.json",
    "vscode/profiles-dist/fullstack-js-ts.code-profile",
    "agent-ecosystems/stacks/fullstack-js-ts.stack.json",
    "agent-ecosystems/agents/refactor-surgeon.agent.json",
    "agent-ecosystems/agents/test-writer.agent.json",
    "agent-ecosystems/agents/doc-surgeon.agent.json",
    "agent-ecosystems/toolsets/toolset.local-dev.json",
    "agent-ecosystems/toolsets/toolset.review-only.json",
    "scripts/install/fullstack-js-ts-linux.sh"
  ],
  "install": {
    "macos": {
      "description": "Use the macOS script instead of this Linux bundle.",
      "command": "./scripts/install/fullstack-js-ts-macos.sh"
    },
    "windows": {
      "description": "Use the Windows script instead of this Linux bundle.",
      "command": "./scripts/install/fullstack-js-ts-windows.ps1"
    },
    "linux": {
      "description": "Run the Linux installer to validate configs, show devcontainer/profile paths, and guide manual import (non-destructive).",
      "command": "./scripts/install/fullstack-js-ts-linux.sh"
    }
  }
}
