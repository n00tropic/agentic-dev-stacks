{
  "name": "agentic-dev-stacks",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    }
  },
  "postCreateCommand": "pip3 install --user -r requirements-dev.txt && npm ci --prefix docs/ui/agentic-neon-ui --no-fund --no-audit",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["ms-python.python", "ms-python.vscode-pylance", "trunk.io"]
    }
  },
  "remoteUser": "vscode"
}
