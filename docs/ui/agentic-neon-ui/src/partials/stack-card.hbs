<article class="stack-card">
  <div class="stack-card__badge">{{stackId}}</div>
  <h3 class="stack-card__title">{{name}}</h3>
  <p class="stack-card__persona">{{persona}}</p>
  <p class="stack-card__meta">{{languages}}</p>
  <p class="stack-card__agents">{{agents}}</p>
  <div class="stack-card__actions">
    <code class="stack-card__command">{{installScript}}</code>
    <a class="pill" href="{{{docHref}}}">View docs</a>
  </div>
</article>
