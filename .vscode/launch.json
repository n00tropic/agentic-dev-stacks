{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Validate MCP config",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/validate-mcp-config.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "Python: Export VS Code pack",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/vscode/scripts/export-packs.py",
      "args": ["${input:packSlug}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/vscode",
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "id": "packSlug",
      "type": "promptString",
      "description": "Profile slug to export (e.g. core-base-dev)",
      "default": "core-base-dev"
    }
  ]
}
